<body>

    <div class="login-container">
        <h2>تسجيل الدخول</h2>
        <input type="text" id="username" placeholder="اسم المستخدم">
        <input type="password" id="password" placeholder="كلمة السر">
        <button onclick="checkLogin()">تسجيل الدخول</button>
        <div class="message" id="message"></div>
        <div class="hidden-content" id="hiddenContent">
            <h3>مرحباً بك!</h3>
            <p>هذا هو المحتوى المخفي الذي يمكنك رؤيته بعد تسجيل الدخول!</p>
        </div>
    </div>

    <script>
        function checkLogin() {
            // القيم الصحيحة للاسم وكلمة السر
            const correctUsername = "user";
            const correctPassword = "password";

            // الحصول على القيم المدخلة
            const username = document.getElementById("username").value;
            const password = document.getElementById("password").value;

            // التحقق من القيم المدخلة
            if (username === correctUsername && password === correctPassword) {
                document.getElementById("message").innerText = "تم تسجيل الدخول بنجاح!";
                document.getElementById("hiddenContent").style.display = "block";  // إظهار المحتوى المخفي
            } else {
                document.getElementById("message").innerText = "اسم المستخدم أو كلمة السر غير صحيحة.";
                document.getElementById("hiddenContent").style.display = "none";  // إخفاء المحتوى إذا كانت المدخلات خطأ
            }
        }
    </script>

</body>
